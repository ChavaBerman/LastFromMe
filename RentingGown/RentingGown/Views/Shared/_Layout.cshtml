<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Frishman&Berman</title>
    <link rel="icon" href="~/Images/iconography_launcher_example.png" type="image/x-icon" />
    <script src="~/Scripts/jquery-1.8.2.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <link href="~/Content/StyleSheet.css" rel="stylesheet" />
</head>
<body dir="rtl" style="font-family:Calibri">
    
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container" style="background-color: #222;border: solid 2px #222;">

            <div class="navbar-header" style="    margin-top: 2%;">

                @Html.ActionLink("RentingGown", "Index", "Home", new { }, new { @class = "navbar-brand" })
                @Html.ActionLink("הרשמה", "Register", "User", new { }, new { @class = "navbar-brand" })
                @Html.ActionLink("כניסה", "Login", "User", new { }, new { @class = "navbar-brand" })
                @Html.ActionLink("חיפוש שמלה", "Search", "Gowns", new { }, new { @class = "navbar-brand" })
               
            </div>
            <div class="navbar-collapse collapse" style=" margin-right: 6%;  ">
                <div class="acount-header-btn">
                
                    <span style="color: white;"><a href="/User/Register"></a></span>
                </div>
                <a href="/Statistics/CheckOut" title="" class="add-listing-btn">סטטיסטיקות</a>
                <ul class="nav navbar-nav"></ul>
            </div>
            <img src="~/Images/images/logo.png" style="width: 11%;position: absolute;margin-top: -5%;margin-right: -7%;" />
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - RentingGown</p>
        </footer>
    </div>

  
</body>
</html>
<!-- Styles -->
<link href="~/Content/bootstrap.min.css" rel="stylesheet" />
<!-- Bootstrap -->
<link href="~/Content/line-awesome.min.css" rel="stylesheet" />
<!-- Icons -->
<link href="~/Content/style.css" rel="stylesheet" />
